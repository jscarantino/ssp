---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import PageHeader from '@components/PageHeader.astro'
import { Form, Input, Button, Textarea, Heading, Link } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'
---

<DefaultLayout title="Contact">
  <PageHeader title="Contact" subtitle="Have a question? Get in touch." bgType="gradient" />
  <section class="my-16">
    <div class="container">
      <Heading level="h2">Let's talk</Heading>
    </div>
  </section>
  <section class="container">
    <div class="grid grid-cols-1 gap-32 md:grid-cols-2">
      <div class="space-content">
        <Form name="contact" action="/thank-you" method="post">
          <!-- Input field with custom validation message -->
          <Input
            name="firstname"
            label="Your Name"
            required
            data-validation="We need your name to address you correctly"
            autocomplete="given-name"
          />

          <Input name="email" label="Email address" type="email" required autocomplete="email" />

          <!-- Custom validation with pattern -->
          <Input name="phone" label="Phone number" type="tel" required data-validation-pattern="^[0-9]{10}$" />

          <Textarea name="message" label="Message" required />

          <Button htmlType="submit" type="primary">Send Message</Button>
        </Form><br /><br />
      </div>
      <div class="space-content">

        <div class="gap-2xs flex items-center">
          <Icon aria-hidden="true" name="lucide:mail" size={20} class="shrink-0" />
          <p>
            <span class="font-bold">Email:</span>
            <Link href="mailto:josef@seedscalepartners.com">josef@seedscalepartners.com</Link>
          </p>
        </div>

        <div class="gap-2xs flex items-center">
          <Icon aria-hidden="true" name="lucide:map-pin" size={20} class="shrink-0" />
          <p>
            <span class="font-bold">Address:</span>
            Denver, Colorado
          </p>
        </div>

        <ul class="flex flex-wrap gap-2">
          <li>
            <Link
              href="https://www.linkedin.com/in/josefscarantino/"
              isButton
              isExternal
              hideIcon
              animateOnHover
              animationType="boop"
            >
              <Icon aria-hidden="true" name="lucide:linkedin" size={32} />
              <span class="sr-only">Go to our LinkedIn page, opens in a new tab</span>
            </Link>
          </li>
        </ul>
      </div>
    </div>
  </section>
</DefaultLayout>
